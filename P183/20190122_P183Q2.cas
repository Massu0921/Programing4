P183Q2	START
	RPUSH
	LD	GR7,=0		;ループ用
LOOP	LD	GR1,DATA,GR7
	CALL	DISP
	SRL	GR1,4		;右シフト
	CALL	DISP
	SRL	GR1,4
	CALL	DISP
	SRL	GR1,4
	CALL	DISP
	CPA	GR7,=1		;2回目なら終了
	JZE	FIN
	ADDA	GR7,=1		;次へ
	JUMP	LOOP
;
FIN	RET
	RPOP
;
DISP	PUSH	0,GR1
	PUSH	0,GR2
	AND	GR1,=#000F	;下位4BIT抽出
	LD	GR2,HEX,GR1	;文字コード変換
	ST	GR2,OUTTXT
	OUT	OUTTXT,LEN
	POP	GR2
	POP	GR1
	RET
;
DATA	DC	#1234,#ABCD
OUTTXT	DS	1
LEN	DC	1
HEX	DC	'0123456789ABCDEF'
	END